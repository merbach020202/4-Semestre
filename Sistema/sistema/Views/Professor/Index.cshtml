@{
    ViewData["Title"] = "Principal";
}

@if(ViewBag.NomeProfessor == null)
{
    <a asp-controller="Login">Login</a>
}
else
{
    <div style="display:flex">
        <h3>@ViewBag.NomeProfessor</h3>

        <form asp-controller="Login" asp-action="Logout" method="post">
            <button type="submit">Sair</button>
        </form>
    </div>

    <form asp-action="CadastrarTurma" asp-controller="Professor">
        <input type="text" name="nomeTurma" placeholder="Nome da Turma" required />
        <button type="submit">Cadastrar Turma</button>
    </form>

    <h4>Turmas</h4>

    <table>
        <thead>
            <tr>
                <th>Número</th>
                <th>Nome</th>
                <th>Ação</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var turma in Model)
            {
                <tr>
                    <td>@turma.TurmaId</td>
                    <td>@turma.Nome</td>
                    <td>
                        <form asp-controller="Professor" asp-action="ExcluirTurma" method="post" onsubmit="return confirm('Você tem certeza que deseja excluir esta turma?')">
                            <input type="hidden" name="turmaId" value="@turma.TurmaId" />
                            <button type="submit">Excluir</button>
                        </form>

                        <form asp-controller="Atividade" asp-action="Index" asp-route-turmaId="@turma.TurmaId">
                            <input type="hidden" name="turmaId" value="@turma.TurmaId" />
                            <button type="submit">Visualizar</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (TempData["Mensagem"] != null)
    {
        <p style="color:red">@TempData["Mensagem"]</p>
    }
}

